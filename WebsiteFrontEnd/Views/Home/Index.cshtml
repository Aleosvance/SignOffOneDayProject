@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Painfully Generic Shopping Website</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>Things To Buy</h2>
        <h4>@Html.ActionLink("Buy Thing 1", "Add1ToCart", "Home")</h4>
        <h4>@Html.ActionLink("Buy Thing 2", "Add2ToCart", "Home")</h4>
    </div>
    <div class="col-md-6">
        <h2>Basket</h2>
        <p>@foreach (var item in ViewBag.Listing)
        {
            <p> @item.itemName </p>
        }</p>
        <p>@Html.ActionLink("Empty Cart", "ClearCart", "Home")</p>
    </div>
</div>